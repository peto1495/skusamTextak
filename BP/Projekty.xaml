<Window x:Class="BP.Projekty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projekty" MinHeight="300" Width="425" Height="320" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="240"/>
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137" Height="16" Grid.Column="1"/>
        <Button x:Name="OkButton" Content="OK" Grid.Column="1" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
        <Button x:Name="ZrusButton" Content="Zruš" Grid.Column="1" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="75" Click="ZrusButton_Click"/>

    </Grid>
</Window>
